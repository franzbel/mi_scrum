<div class="task-<%= task.id %>">
  <div class="col-md-10">
    <p class="task-title"><%= task.title %></p>
  </div>
  <div class="col-md-2">
    <button type="button" class="btn btn-info edit-task edit-task-<%= task.id %>" data-target="#myModal-<%= task.id %>" data-toggle="modal">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button>
    <!-- Modal -->
    <div id="myModal-<%= task.id %>" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Modal Header</h4>
          </div>
          <div class="modal-body">
            <%= form_for task, remote: true do |f| %>
                <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :task %>
                  <%= f.text_area :task, class:'form-control', rows:'8' %>
                </div>
          <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Editar</button>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="col-md-10">
    <%= markdown(task.task) %>
  </div>
  <div class="col-md-2">
  </div>
</div>
<script>
  $(document).ready(function () {
    $("#myModal-<%= task.id %>").on('hidden.bs.modal', function () {
      $('#edit_task_<%= task.id %>').submit();
    });
  });
</script>